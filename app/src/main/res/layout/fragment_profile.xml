<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.profile.ProfileFragment">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <androidx.cardview.widget.CardView
          android:id="@+id/btnProfile"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:layout_marginRight="20dp"
          app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

          <ImageView
              android:layout_width="@dimen/_20sdp"
              android:layout_height="@dimen/_20sdp"
              android:layout_marginStart="20dp"
              android:layout_marginTop="10dp"
              android:layout_marginEnd="10dp"
              android:layout_marginBottom="10dp"
              android:src="@drawable/user_icon" />

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="5dp"
              android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

              <TextView
                  android:id="@+id/txtName"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:letterSpacing="0.01"
                  android:lineSpacingExtra="1sp"
                  android:text="Phan Quang Duy"
                  android:textColor="@color/black"
                  android:textSize="14.3sp"
                  android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

              <TextView
                  android:id="@+id/txtEmail"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:letterSpacing="0.01"
                  android:lineSpacingExtra="1sp"
                  android:text="phanquangduytvt.work@gmail.com"
                  android:textColor="@color/lavender"
                  android:textSize="12sp"
                  android:textStyle="bold" />

            </LinearLayout>
          </LinearLayout>

        </LinearLayout>

      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:id="@+id/bankTransfer"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:layout_marginRight="20dp"
          android:background="@color/white"
          app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="20dp"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="10dp"
              android:letterSpacing="0.01"
              android:lineSpacingExtra="1sp"
              android:text="Thông tin liên hệ"
              android:textColor="@color/grey"
              android:textSize="14.3sp"
              android:textStyle="bold" />

          <View
              android:layout_width="match_parent"
              android:layout_height="0.5dp"
              android:layout_marginBottom="10dp"
              android:background="#afaeae" />

          <RelativeLayout
              android:id="@+id/relBank"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingBottom="10dp">

            <LinearLayout
                android:id="@+id/lnIconBank1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

              <ImageView
                  android:id="@+id/menuFacebook"
                  android:layout_width="50dp"
                  android:layout_height="30dp"
                  android:layout_marginStart="20dp"
                  app:srcCompat="@drawable/facebook_small" />

              <ImageView
                  android:id="@+id/menuMessage"
                  android:layout_width="50dp"
                  android:layout_height="30dp"
                  android:layout_marginStart="10dp"
                  app:srcCompat="@drawable/messenger" />

              <ImageView
                  android:id="@+id/menuZalo"
                  android:layout_width="50dp"
                  android:layout_height="30dp"
                  android:layout_marginStart="10dp"
                  app:srcCompat="@drawable/zalo" />

              <ImageView
                  android:id="@+id/menuGithub"
                  android:layout_width="50dp"
                  android:layout_height="40dp"
                  android:layout_marginStart="10dp"
                  app:srcCompat="@drawable/github" />
            </LinearLayout>

          </RelativeLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/text_extra_fee_bank_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="2.7sp"
                android:text="Các điều khoản"
                android:textColor="@color/dark_grey"
                android:textSize="14.7sp" />

            <TextView
                android:id="@+id/value_extra_fee_bank_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="2.7sp"
                android:text="liên hệ"
                android:textSize="14.7sp"
                android:textStyle="bold" />
          </RelativeLayout>

        </LinearLayout>
      </androidx.cardview.widget.CardView>


      <androidx.cardview.widget.CardView
          android:id="@+id/weather"
          android:layout_width="match_parent"
          android:layout_height="@dimen/_45sdp"
          android:layout_marginStart="@dimen/_20sdp"
          android:layout_marginTop="@dimen/_20sdp"
          android:layout_marginEnd="@dimen/_20sdp"
          android:layout_marginBottom="@dimen/_20sdp"
          app:cardCornerRadius="10dp"
          tools:viewBindingIgnore="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:src="@drawable/cloud_solid" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Thời tiết các tỉnh thành"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:textStyle="normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="338dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="17dp"
            app:srcCompat="@drawable/arrow_right" />

      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:id="@+id/logout"
          android:layout_width="match_parent"
          android:layout_height="@dimen/_45sdp"
          android:layout_marginStart="@dimen/_20sdp"
          android:layout_marginEnd="@dimen/_20sdp"
          android:layout_marginBottom="30dp"
          app:cardCornerRadius="10dp"
          tools:viewBindingIgnore="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:src="@drawable/sign_out" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="15dp"
            android:text="Đăng xuất"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:textStyle="normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="338dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="17dp"
            app:srcCompat="@drawable/arrow_right" />

      </androidx.cardview.widget.CardView>

    </LinearLayout>

  </ScrollView>

</LinearLayout>