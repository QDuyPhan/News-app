<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white"
      tools:context=".ui.account.LoginFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_80sdp"
        android:gravity="center"
        android:text="Hi, Welcome Back! ðŸ‘‹"
        android:textColor="@color/black"
        android:textSize="@dimen/_27sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/wrapUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_27sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_27sdp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline">

      <TextView
          android:id="@+id/txtUsername"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:layout_marginBottom="@dimen/_10sdp"
          android:text="Username"
          android:textColor="@color/black"
          android:textSize="12sp" />

      <EditText
          android:id="@+id/editUsernameSignIN"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/edit_text_background"
          android:hint="Username"
          android:inputType="text"
          android:padding="@dimen/_10sdp"
          android:textSize="@dimen/_10sdp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wrapPass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/wrapUsername"
        app:layout_constraintStart_toStartOf="@+id/wrapUsername"
        app:layout_constraintTop_toBottomOf="@+id/wrapUsername">

      <TextView
          android:id="@+id/txtPassword"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:layout_marginBottom="@dimen/_10sdp"
          android:text="Password"
          android:textColor="@color/black"
          android:textSize="12sp" />

      <EditText
          android:id="@+id/editPassSignIn"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/edit_text_background"
          android:hint="Password"
          android:inputType="textPassword"
          android:padding="@dimen/_10sdp"
          android:textSize="@dimen/_10sdp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Forgot Password?"
        android:textColor="@color/red"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/wrapPass"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/wrapPass"
        app:layout_constraintTop_toBottomOf="@+id/wrapPass" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signInBtn"
        android:layout_width="0dp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/btn_background"
        android:text="Login"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/wrapPass"
        app:layout_constraintStart_toStartOf="@+id/wrapPass"
        app:layout_constraintTop_toBottomOf="@+id/wrapPass" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="149dp" />

    <LinearLayout
        android:id="@+id/wrapSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fbLoginBtn">

      <TextView
          android:id="@+id/textView8"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Donâ€™t have an account ? "
          android:textColor="@color/black" />

      <TextView
          android:id="@+id/txtSignup"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Sign Up"
          android:textColor="@color/lavender" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/signInBtn"
        app:layout_constraintStart_toStartOf="@+id/signInBtn"
        app:layout_constraintTop_toBottomOf="@+id/signInBtn">

      <View
          android:layout_width="@dimen/_80sdp"
          android:layout_height="2dp"
          android:background="@color/black" />

      <Space
          android:layout_width="@dimen/_30sdp"
          android:layout_height="wrap_content" />

      <TextView
          android:id="@+id/textView11"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Or With"
          android:textColor="@color/black" />

      <Space
          android:layout_width="@dimen/_30sdp"
          android:layout_height="wrap_content" />

      <View
          android:layout_width="@dimen/_80sdp"
          android:layout_height="2dp"
          android:background="@color/black" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/googleLoginBtn"
        android:layout_width="0dp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/edit_text_background"
        android:drawableLeft="@drawable/google_small"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:text="Login with Google"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fbLoginBtn"
        android:layout_width="0dp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/edit_text_background"
        android:drawableLeft="@drawable/facebook_small"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:text="Login with Facebook"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="@+id/googleLoginBtn"
        app:layout_constraintStart_toStartOf="@+id/googleLoginBtn"
        app:layout_constraintTop_toBottomOf="@+id/googleLoginBtn" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>