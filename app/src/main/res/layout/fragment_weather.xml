<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.weather.WeatherFragment">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:orientation="horizontal">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:padding="@dimen/_6sdp"
        android:src="@drawable/baseline_arrow_back_ios_24" />

    <EditText
        android:id="@+id/edittextSearch"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:hint="Thành phố / khu vực"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/btnSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/search_1" />
  </LinearLayout>

  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="50dp"
      android:layout_marginEnd="20dp"
      app:cardCornerRadius="20dp"
      app:cardElevation="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/black_2"
        android:orientation="vertical"
        android:padding="20dp">

      <TextView
          android:id="@+id/textviewQuocGia"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="2dp"
          android:text="Tên quốc gia"
          android:textColor="@color/white"
          android:textSize="25dp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/textviewThanhpho"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="2dp"
          android:textColor="@color/white"
          android:textSize="25dp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/textviewNgayCapNhat"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="30dp"
          android:text="Ngày Cập Nhật"
          android:textColor="@color/white"
          android:textSize="25dp" />

      <ImageView
          android:id="@+id/imgIcon"
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:layout_gravity="center"
          android:layout_marginTop="2dp" />

      <TextView
          android:id="@+id/textviewTrangThai"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="20dp"
          android:text="Trang thái"
          android:textColor="@color/white"
          android:textSize="30dp" />

      <TextView
          android:id="@+id/textviewNhietDo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:text="Nhiệt độ"
          android:textColor="@color/white"
          android:textSize="35dp" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:orientation="horizontal"
          android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/baseline_water_drop_24" />

          <TextView
              android:id="@+id/textviewDoam"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Độ ẩm"
              android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/baseline_wb_cloudy_24" />

          <TextView
              android:id="@+id/textviewMay"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Mây"
              android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/baseline_wind_power_24" />

          <TextView
              android:id="@+id/textviewGio"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Gió"
              android:textColor="@color/white" />
        </LinearLayout>
      </LinearLayout>

    </LinearLayout>
  </androidx.cardview.widget.CardView>

</LinearLayout>